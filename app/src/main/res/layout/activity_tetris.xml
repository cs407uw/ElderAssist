<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/topBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DC9FB4"
            android:text="Back"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DC9FB4"
            android:text="Restart"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tetrisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLayout"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="~Tetris Challenge~"
        android:textColor="#644040"
        android:textSize="36sp"
        android:textStyle="bold" />

    <com.cs407.elderassist_tutorial.TetrisView
        android:id="@+id/tetrisView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tetrisTitle"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gameOverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="127dp"
        android:text="   Game Over! Your total score is: 0"
        android:textColor="#644040"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <!--    android:visibility="gone"-->

</RelativeLayout>
