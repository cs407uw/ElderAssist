<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Text (ElderAssist) Centered -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- Search Bar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- Search EditText -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/search_hint"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />

        <!-- Search Button -->
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tutorials_title"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:textStyle="bold" />

    <!-- RecyclerView for Video List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Footer Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/windowBackground">

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/home_icon"
            android:contentDescription="@string/home_button_desc"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Videos Button -->
        <ImageButton
            android:id="@+id/videosButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/videos_icon"
            android:contentDescription="@string/videos_button_desc"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Blogs Button -->
        <ImageButton
            android:id="@+id/blogsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/blogs_icon"
            android:contentDescription="@string/blogs_button_desc"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_icon"
            android:contentDescription="@string/profile_button_desc"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/settings_icon"
            android:contentDescription="@string/settings_button_desc"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />
    </LinearLayout>

</LinearLayout>
